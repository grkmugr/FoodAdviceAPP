<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".AngrybtnActivity"
    android:background="#F31C1C"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/bal覺k"
        app:layout_constraintVertical_bias="0.553"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageet"
        android:scaleType="fitXY"
        android:id="@+id/imagebal覺k"/>

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagetavuk"
        android:scaleType="fitXY"
        android:id="@+id/imageet"
        android:layout_marginBottom="56dp"/>

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/tavuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:id="@+id/imagetavuk"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageet"
        android:id="@+id/txtbal覺k"
        app:layout_constraintTop_toBottomOf="@+id/imagebal覺k"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="BALIK"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagetavuk"
        android:id="@+id/txtet"
        app:layout_constraintTop_toBottomOf="@+id/imageet"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="ET"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/txttavuk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagetavuk"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="TAVUK"/>

    <Button
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btngeri"
        android:text="Geri"
        app:backgroundTint="#700F29"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>