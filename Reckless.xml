<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".RecklessbtnActivity"
    android:background="#F31C1C"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/dondurma"
        app:layout_constraintVertical_bias="0.523"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagekuruyemiş"
        android:scaleType="fitXY"
        android:id="@+id/imagedondurma"/>

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/kuruyemiş"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageçörek"
        android:scaleType="fitXY"
        android:id="@+id/imagekuruyemiş"
        android:layout_marginBottom="48dp"/>

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/çörek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:id="@+id/imageçörek"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagekuruyemiş"
        android:id="@+id/txtdondurma"
        app:layout_constraintTop_toBottomOf="@+id/imagedondurma"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="MEYVE"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/txtkuruyemiş"
        app:layout_constraintTop_toBottomOf="@+id/imagekuruyemiş"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="KURUYEMİŞ"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/txtçörek"
        app:layout_constraintTop_toBottomOf="@+id/imageçörek"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="ÇÖREK"
        android:layout_marginTop="16dp"/>

    <Button
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btngeri"
        android:text="Geri"
        android:layout_marginTop="8dp"
        app:backgroundTint="#700F29"/>

</androidx.constraintlayout.widget.ConstraintLayout>