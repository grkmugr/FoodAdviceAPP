<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".HappybtnActivity"
    android:foregroundTint="#5C1C1C"
    android:background="#F31C1C"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/hamburger"
        app:layout_constraintVertical_bias="0.591"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagekebap"
        android:scaleType="fitXY"
        android:id="@+id/imageham"/>

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/kebap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagepizza"
        android:scaleType="fitXY"
        android:id="@+id/imagekebap"
        android:layout_marginBottom="44dp"/>

    <ImageButton
        android:layout_height="175dp"
        android:layout_width="350dp"
        app:srcCompat="@drawable/pizza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:id="@+id/imagepizza"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagekebap"
        android:id="@+id/txthamburger"
        android:layout_marginBottom="4dp"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="HAMBURGER"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imagepizza"
        android:id="@+id/txtkebap"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="KEBAP"
        app:layout_constraintTop_toBottomOf="@+id/imagekebap"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/txtpizza"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="italic"
        android:textSize="24sp"
        android:text="PÄ°ZZA"
        app:layout_constraintTop_toBottomOf="@+id/imagepizza"/>

    <Button
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btngeri"
        android:text="Geri"
        app:backgroundTint="#700F29"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>