<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".DuygularActivity"
    android:backgroundTint="#D3FD0101"
    android:background="#FDF6F6"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/Moodscreen"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="140dp"
        android:id="@+id/Happybutton"
        app:srcCompat="@drawable/txthappy"
        app:layout_constraintTop_toBottomOf="@+id/mainwriting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintEnd_toStartOf="@+id/Angrybutton"
        android:src="@color/design_default_color_on_primary"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="140dp"
        android:id="@+id/Angrybutton"
        app:srcCompat="@drawable/txtangry"
        app:layout_constraintTop_toBottomOf="@+id/mainwriting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.803"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="140dp"
        android:id="@+id/Sadbutton"
        app:srcCompat="@drawable/txtsad"
        app:layout_constraintTop_toBottomOf="@+id/happy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="140dp"
        android:id="@+id/Surprisedbutton"
        app:srcCompat="@drawable/txtsurprised"
        app:layout_constraintTop_toBottomOf="@+id/sad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintEnd_toStartOf="@+id/Thoughtfulbutton"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="140dp"
        android:id="@+id/Thoughtfulbutton"
        app:srcCompat="@drawable/txtthoughtful"
        app:layout_constraintTop_toBottomOf="@+id/reckless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:contentDescription="TODO"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/happy"
        app:layout_constraintTop_toBottomOf="@+id/Happybutton"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/happy"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/angry"
        app:layout_constraintTop_toBottomOf="@+id/Angrybutton"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/angry"
        app:layout_constraintStart_toEndOf="@+id/happy"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/sad"
        app:layout_constraintTop_toBottomOf="@+id/Sadbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reckless"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/sad"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/reckless"
        app:layout_constraintTop_toBottomOf="@+id/Recklessbutton"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/reckless"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/surprised"
        app:layout_constraintTop_toBottomOf="@+id/Surprisedbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintEnd_toStartOf="@+id/thoughtful"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/surprised"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/thoughtful"
        app:layout_constraintTop_toBottomOf="@+id/Thoughtfulbutton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/thoughtful"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:background="#EDE65A"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/mainwriting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/mainwriting"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="#8E9E3A"/>

    <ImageButton
        android:layout_height="120dp"
        android:layout_width="140dp"
        android:id="@+id/Recklessbutton"
        app:srcCompat="@drawable/txtreckless"
        app:layout_constraintTop_toBottomOf="@+id/angry"
        app:layout_constraintHorizontal_bias="0.51"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/Sadbutton"/>

    <Button
        app:backgroundTint="#9EE19600"
        android:backgroundTint="#938353"
        android:background="#FFFFFF"
        android:layout_height="81dp"
        android:layout_width="196dp"
        android:id="@+id/Nothingbutton"
        app:layout_constraintTop_toBottomOf="@+id/mainwriting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="548dp"
        android:textStyle="italic"
        android:textSize="25sp"
        android:text="@string/Nothingbutton"/>

</androidx.constraintlayout.widget.ConstraintLayout>